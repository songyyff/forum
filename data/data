  `tpnu` int(4) NOT NULL default '0' COMMENT '置顶帖子数量',
  `mxtp` int(4) NOT NULL default '20' COMMENT '最多置顶贴数量',
  PRIMARY KEY  (`id`),
  KEY `pid` (`pid`,`sort`),
  KEY `gps` (`gps`),
  KEY `ups` (`ups`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 ROW_FORMAT=FIXED COMMENT='论坛';


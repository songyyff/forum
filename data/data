DROP TABLE IF EXISTS `trpl`;
CREATE TABLE `trpl` (
  `id` int(11) NOT NULL auto_increment,
  `uid` int(11) NOT NULL COMMENT '发布人id',
  `iid` int(11) NOT NULL default '0' COMMENT '属于帖子编号',
  `pos` int(11) NOT NULL default '0' COMMENT '回复在帖子中的显示位置',
  `title` varchar(1000) default NULL COMMENT '标题',
  `href` mediumtext COMMENT '相关链接',
  `lan` varchar(200) default NULL COMMENT '帖内代码包类型',
  `content` mediumtext COMMENT '内容',
  `ctime` datetime default NULL COMMENT '创建时间',
  `atime` timestamp NOT NULL default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP COMMENT '时间印',
  `cuser` varchar(100) default NULL COMMENT '最后修改人',
  `cuid` int(11) NOT NULL default '0' COMMENT '最后修改人id',
  `lctm` datetime default NULL COMMENT '最后修改时间',
  `hadd` char(1) NOT NULL default '0' COMMENT '是否有附件 ''0''无',
  `adnu` int(11) NOT NULL default '0' COMMENT '附件数量',
  `rigt` int(11) NOT NULL default '2147483647' COMMENT '是否显示内容 0不显示',
  `gid` int(11) NOT NULL default '0' COMMENT '所属论坛id',
  `stat` enum('E','D','R') NOT NULL default 'E' COMMENT 'R del',
  `lmng` int(11) NOT NULL default '0' COMMENT '最后管理人',
  `lmtm` datetime default NULL COMMENT '最后管理时间',
  `mngs` varchar(2000) default NULL COMMENT '其他管理员留言',
  `stime` decimal(14,4) NOT NULL default '0.0000' COMMENT '发表毫秒时间',
  `m` int(11) NOT NULL default '0' COMMENT '临时状态标记',
  PRIMARY KEY  (`id`),
  KEY `gp` (`gid`,`stat`,`adnu`),
  KEY `ut` (`uid`,`ctime`),
  KEY `gup` (`gid`,`stat`,`uid`,`adnu`),
  KEY `gut` (`gid`,`stat`,`uid`,`ctime`),
  KEY `gt` (`gid`,`stat`,`ctime`),
  KEY `ggt` (`gid`,`stat`,`rigt`,`ctime`),
  KEY `iis` (`iid`,`stat`,`pos`),
  KEY `si` (`gid`,`stat`,`id`),
  KEY `suat` (`gid`,`stat`,`uid`,`adnu`,`ctime`),
  KEY `sut` (`gid`,`stat`,`uid`,`ctime`),
  KEY `sati` (`gid`,`stat`,`adnu`,`ctime`,`id`),
  KEY `sti` (`gid`,`stat`,`ctime`,`id`),
  FULLTEXT KEY `tc` (`content`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 COMMENT='回复';


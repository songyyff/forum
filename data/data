  `link` varchar(100) default NULL COMMENT '连接信息',
  `sort` int(11) NOT NULL default '0' COMMENT '排序位',
  `type` int(1) NOT NULL default '0' COMMENT '0，游客帮助；1，用户帮助；2，管理员帮助；3，保留字；4，共享帮助',
  PRIMARY KEY  (`id`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 ROW_FORMAT=DYNAMIC COMMENT='帮助内容';


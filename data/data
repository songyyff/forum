  `inmg` int(4) NOT NULL default '0' COMMENT '管理锁',
  `chgt` datetime default NULL COMMENT '最后锁定时间',
  `gmnu` int(4) NOT NULL default '0' COMMENT '管理论坛数量',
  `getp` int(4) NOT NULL default '131073' COMMENT '用户通过邮件获取密码时间间隔(天)，低16位为时间间隔，中8位为间隔内最大获取次数，高8位间隔内已经使用的获取次数',
  `gptm` datetime default NULL COMMENT '获取密码时间间隔初始时间',
  `q1` varchar(200) default NULL COMMENT '密码保护问题1',
  `a1` varchar(200) default NULL COMMENT '密码保护问题1答案',
  `q2` varchar(200) default NULL COMMENT '密码保护问题2',
  `a2` varchar(200) default NULL COMMENT '密码保护问题2答案',
  `q3` varchar(200) default NULL COMMENT '密码保护问题3',
  `a3` varchar(200) default NULL COMMENT '密码保护问题3答案',
  `bgs` int(4) NOT NULL default '0' COMMENT '获得徽章数量',
  PRIMARY KEY  (`id`),
  UNIQUE KEY `name` (`name`),
  UNIQUE KEY `mail` (`email`),
  KEY `ctime` (`ctime`),
  KEY `si` (`sex`,`ctime`,`rigt`,`stat`,`level`,`name`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 ROW_FORMAT=DYNAMIC COMMENT='注册用户';


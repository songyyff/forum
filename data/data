DROP TABLE IF EXISTS `msg`;
CREATE TABLE `msg` (
  `id` int(11) NOT NULL auto_increment,
  `uid` int(11) default NULL COMMENT '消息所有人ID',
  `fid` int(11) default NULL COMMENT '发送人ID',
  `mid` int(11) default NULL COMMENT '消息ID',
  `rtime` datetime default NULL COMMENT '阅读时间',
  `rd` int(1) default '0' COMMENT '0未读；1已读',
  `type` int(1) NOT NULL default '0' COMMENT '0接受的消息；1发送的消息；2删除消息',
  PRIMARY KEY  (`id`),
  KEY `uid` (`uid`),
  KEY `msg` USING BTREE (`uid`,`type`,`rd`,`id`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 ROW_FORMAT=FIXED COMMENT='站内消息';


--
-- Table structure for table `tfrid`
--

DROP TABLE IF EXISTS `tfrid`;
CREATE TABLE `tfrid` (
  `uid` int(11) NOT NULL default '0' COMMENT '用户id',
  `fid` int(11) NOT NULL default '0' COMMENT '朋友id',
  `comm` blob COMMENT '说明',
  `ctime` datetime default NULL COMMENT '加入时间',
  `type` int(1) NOT NULL default '0' COMMENT '0 朋友； 1 消息拒绝人',
  PRIMARY KEY  (`uid`,`type`,`fid`),
  KEY `uid` (`uid`,`type`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 ROW_FORMAT=DYNAMIC COMMENT='朋友数据';

--
-- Dumping data for table `tfrid`
--


/*!40000 ALTER TABLE `tfrid` DISABLE KEYS */;
LOCK TABLES `tfrid` WRITE;
UNLOCK TABLES;
/*!40000 ALTER TABLE `tfrid` ENABLE KEYS */;

--
-- Table structure for table `tgup`
--

DROP TABLE IF EXISTS `tgup`;
CREATE TABLE `tgup` (
  `id` int(11) NOT NULL auto_increment,
  `pid` int(11) default NULL COMMENT '父论坛id',
  `uid` int(11) NOT NULL default '0' COMMENT '创建人id',
  `gps` int(4) NOT NULL default '0' COMMENT '游客可访问论坛标记标记',
  `ups` int(4) NOT NULL default '0' COMMENT '用户可访问论坛排序标记',
  `sort` int(4) NOT NULL default '0' COMMENT '主排序标记',
  `name` varchar(500) default NULL COMMENT '论坛名称',
  `top2` int(4) NOT NULL default '0' COMMENT '前2层为1，深过2层为0',
  `comm` varchar(2000) default NULL COMMENT '论坛说明',
  `ctime` datetime default NULL COMMENT '创建时间',
  `atime` timestamp NOT NULL default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP,
  `stat` enum('E','D') default 'D' COMMENT 'E=Enable,D=Disable',
  `ltitle` varchar(1000) default NULL COMMENT '最后发贴内容',
  `luser` varchar(50) default NULL COMMENT '最后发贴人',
  `ltime` datetime default NULL COMMENT '最后发贴时间',
  `luid` int(11) NOT NULL default '0' COMMENT '最后发帖人id',
  `liid` int(11) NOT NULL default '0' COMMENT '最后发帖id',
  `vnum` int(11) NOT NULL default '0' COMMENT '访问人数',
  `inum` int(11) NOT NULL default '0' COMMENT '帖子数量',
  `dnum` int(11) NOT NULL default '0' COMMENT '无效帖数',
  `rigt` int(11) NOT NULL default '2147483647' COMMENT '权限',
  `level` int(4) NOT NULL default '1' COMMENT '论坛等级',
  `rnum` int(11) NOT NULL default '0' COMMENT '回复总数',

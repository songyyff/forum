/*!50003 DROP PROCEDURE IF EXISTS `i` */;;
/*!50003 SET SESSION SQL_MODE="STRICT_TRANS_TABLES,NO_AUTO_CREATE_USER"*/;;
/*!50003 CREATE*/  /*!50003 PROCEDURE `i`(M INT,U INT,I INT)
    COMMENT '帖子查询过程'
select i.*,
g.stat as ge,g.rigt as gr,g.name as gn,g.level as gl,g.pid,
u.name,u.qq,u.ww,u.yahoo,u.sign,u.sex,u.inum,u.rnum as urnu,u.rdnum as urd,u.inte,u.msn,u.face,u.level,u.ctime as uct,u.ltime,u.money,u.ontime,u.level as ul,u.rigt as ur,
z.stat as zs,z.level as zl,z.rigt as zr,z.rdnum as zrd,
(select s.rigt from tspu as s use index(unind) where M!=0 and s.uid=U and i.gid=s.gid)as sr,
(select GROUP_CONCAT("[\"",concat_ws("\",\"",id,substr(type,1,5),size,time,name),"\"]")from trsc as c use index(iid) where c.iid=i.id and c.used=0 group by c.iid) as ats,
(select GROUP_CONCAT("\"",concat_ws("\",\"",bg,n),"\"")from bgs as b use index(ho) where b.uid=i.uid and b.r=0) as bg
from titem as i
left join tgup as g on i.gid=g.id
left join tuser as u on i.uid=u.id
left join tuser as z on z.id=U
where i.id=I */;;
/*!50003 SET SESSION SQL_MODE=@OLD_SQL_MODE*/;;
/*!50003 DROP PROCEDURE IF EXISTS `r` */;;
/*!50003 SET SESSION SQL_MODE="STRICT_TRANS_TABLES,NO_AUTO_CREATE_USER"*/;;
/*!50003 CREATE*/  /*!50003 PROCEDURE `r`(I INT,P INT,X INT)
    COMMENT '回复查询过程'
begin
set SQL_SELECT_LIMIT=X;

select t1.*,
t2.name,t2.qq,t2.ww,t2.yahoo,t2.sign,t2.sex,t2.inum,t2.rnum,t2.rdnum,t2.inte,t2.msn,t2.face,t2.level,t2.ctime as uct,t2.ltime,t2.inum,t2.rnum,t2.ltime,t2.money,t2.ontime,t2.rigt as ur,

(select GROUP_CONCAT("[\"",concat_ws("\",\"",id,substr(type,1,5),size,time,name),"\"]")
from trsc as c use index(rid) where c.rid=t1.id and c.used=0 group by c.rid) as ats,

(select GROUP_CONCAT("\"",concat_ws("\",\"",bg,n),"\"")
from bgs as b use index(ho) where b.uid=t1.uid and b.r=0 group by b.uid) as bg

from trpl as t1 force index(iis)
left join tuser as t2 on t1.uid=t2.id 
where t1.iid=I and t1.stat='E' and t1.pos>(P-1)*X;

set SQL_SELECT_LIMIT=DEFAULT;
END */;;
/*!50003 SET SESSION SQL_MODE=@OLD_SQL_MODE*/;;
/*!50003 DROP PROCEDURE IF EXISTS `z` */;;
/*!50003 SET SESSION SQL_MODE="STRICT_TRANS_TABLES,NO_AUTO_CREATE_USER"*/;;
/*!50003 CREATE*/  /*!50003 PROCEDURE `z`(I INT,U INT)
    COMMENT '附件查询过程'
select a.size as s,a.time as lt,a.path as p,a.name as n,a.ext as e,a.type as t,a.uid as uu,a.iid,a.rid,
b.stat as rs,b.uid as ru,b.rigt as rr,
f.rigt as rur,
c.stat as iss,c.rdnum as ird,c.rigt as ir,c.uid as iu,
h.rigt as iur,
d.stat as gs,d.level as gl,d.rigt as gr,
i.rigt as ur,i.stat as us,
e.rigt as spr
from trsc as a
left join trpl as b on a.rid=b.id
left join tuser as f on b.uid=f.id
left join titem as c on if(a.iid>0,a.iid,b.iid)=c.id
left join tuser as h on c.uid=h.id
left join tgup as d on c.gid=d.id
left join tuser as i on i.id=U
left join tspu as e on c.gid=e.gid and e.uid=U
where a.id=I */;;

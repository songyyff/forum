  KEY `sut` (`gid`,`stat`,`uid`,`ctime`),
  KEY `sati` (`gid`,`stat`,`adnu`,`ctime`,`id`),
  KEY `si` (`gid`,`stat`,`id`),
  KEY `m` (`m`,`ctime`),
  FULLTEXT KEY `tc` (`title`,`content`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 ROW_FORMAT=DYNAMIC COMMENT='帖子';


  `ltitle` varchar(500) default NULL COMMENT '最后回复内容',
  `ltime` datetime default NULL COMMENT '最后回复时间',
  `lrid` int(11) NOT NULL default '0' COMMENT '最后回复id',
  `lrrg` int(11) NOT NULL default '16777215' COMMENT '最后回复的权限',
  `rdnum` int(11) NOT NULL default '0' COMMENT '阅读权限',
  `rigt` int(11) NOT NULL default '2147483647' COMMENT '帖子权限',
  `stat` enum('E','D') NOT NULL default 'E' COMMENT '帖子状态',
  `cuser` varchar(100) default NULL COMMENT '最后修改人',
  `cuid` int(11) NOT NULL default '0' COMMENT '最后修改人id',
  `lctm` datetime default NULL COMMENT '最后修改时间',
  `hadd` char(1) NOT NULL default '0' COMMENT '是否有附件''0'' 无',
  `type` int(11) NOT NULL default '1' COMMENT '帖子类型 1普通2置顶3其他',
  `deco` int(11) NOT NULL default '1' COMMENT '修饰 1普通2精华',
  `mngs` varchar(2000) default NULL COMMENT '其他管理员意见',
  `lmng` int(11) NOT NULL default '0' COMMENT '最后管理人',
  `lmtm` datetime default NULL COMMENT '管理员最后管理时间',
  `inmg` int(11) NOT NULL default '0' COMMENT '当前修改状态 0 无修改，1 正在被修改',
  `chgt` datetime default NULL COMMENT '最后被锁修改时间',
  `suvn` int(11) NOT NULL default '0' COMMENT '调查表数量',
  `alts` int(6) NOT NULL default '0' COMMENT '调查已经修改标记',
  `tims` datetime default NULL COMMENT '调查表修改时间',
  `adnu` int(11) NOT NULL default '0' COMMENT '总附件数量',
  `vdoi` int(11) NOT NULL default '0' COMMENT '视频附件数量',
  `adoi` int(11) NOT NULL default '0' COMMENT '音乐附件数量',
  `athi` int(11) NOT NULL default '0' COMMENT '其它类型附件数量',
  `pici` int(11) NOT NULL default '0' COMMENT '图片附件数量',
  `m` int(11) NOT NULL default '0' COMMENT '临时状态标记',
  PRIMARY KEY  (`id`),
  UNIQUE KEY `sti` (`gid`,`stat`,`ctime`,`id`),
  KEY `self` (`uid`,`ctime`),
  KEY `gl` (`gid`,`stat`,`type`,`ltime`),
  KEY `s1` (`gid`,`uid`,`ctime`),
  KEY `gp` (`gid`,`stat`,`adnu`,`rigt`),
  KEY `gut` (`gid`,`stat`,`uid`,`ctime`,`rigt`),
  KEY `gup` (`gid`,`stat`,`uid`,`adnu`,`rigt`),
  KEY `gt` (`gid`,`stat`,`ctime`),
  KEY `ggt` (`gid`,`stat`,`rigt`,`ctime`),
